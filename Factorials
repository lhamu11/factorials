function Factorial(n){
    if (n<=1){
        return n
    }
    else {
        return n * Factorial(n-1);
    }
}

let result = Factorial(3);
console.log(result);


//the loop method
function Factorial(n){
    
    var result = 1;
    for (i=n; i>=1; i--){
        result=result * i;
    }
    console.log(`Factorial of the number is ${result}`);
}

Factorial (3);
